<UI>
    <Widgets>
      <Image
            halign="center"
            valign="center"
            horizontal="0"
            vertical="0"
            width="100%"
            height="100%"
            image="texture_title_without_instructions"
            />
      <Button
            halign="left"
            valign="bottom"
            horizontal="10"
            vertical="10"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="4,4,4,4"
            hover-image="texture_ui_button_hover"
            hover-thickness="4,4,4,4"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="4,4,4,4"
            onclick="queue:UI.PlayGameButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="125"
                height="125"
                content="Play Game"
                font="font_game_over"
                />
          </Button>
      <Button
            halign="center"
            valign="bottom"
            horizontal="0"
            vertical="10"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="4,4,4,4"
            hover-image="texture_ui_button_hover"
            hover-thickness="4,4,4,4"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="4,4,4,4"
            onclick="queue:UI.OptionsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100"
                height="100"
                content="Options"
                font="font_game_over"
                />
        </Button>
      <Button
          halign="right"
          valign="bottom"
          horizontal="10"
          vertical="10"
          width="25%"
          height="10%"
          released-image="texture_ui_button_released"
          released-thickness="4,4,4,4"
          hover-image="texture_ui_button_hover"
          hover-thickness="4,4,4,4"
          pressed-image="texture_ui_button_pressed"
          pressed-thickness="4,4,4,4"
          onclick="queue:UI.QuitGameButtonPressedEvent">
          <Label
              halign="center"
              valign="center"
              horizontal="0"
              vertical="0"
              width="125"
              height="125"
              content="Quit Game"
              font="font_game_over"
              />
      </Button>
    </Widgets>
</UI>
