<UI>
    <Widgets>
        <Label
            halign="center"
            valign="center"
            horizontal="0"
            vertical="-25%"
            width="75%"
            height="40%"
            content="Adrift"
            font="font_hyperspace"
            />
      <Button
            id="Play"
            aboveID=""
            leftID="Quit"
            rightID="Options"
            belowID=""
            defaultSelected="true"
            halign="left"
            valign="bottom"
            horizontal="10"
            vertical="10"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="4,4,4,4"
            hover-image="texture_ui_button_hover"
            hover-thickness="4,4,4,4"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="4,4,4,4"
            onclick="queue:UI.PlayGameButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="125"
                height="125"
                content="Play Game"
                font="font_hyperspace"
                />
          </Button>
      <Button
            id="Options"
            aboveID=""
            leftID="Play"
            rightID="Quit"
            belowID=""
            defaultSelected="false"
            halign="center"
            valign="bottom"
            horizontal="0"
            vertical="10"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="4,4,4,4"
            hover-image="texture_ui_button_hover"
            hover-thickness="4,4,4,4"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="4,4,4,4"
            onclick="queue:UI.OptionsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100"
                height="100"
                content="Options"
                font="font_hyperspace"
                />
        </Button>
      <Button
            id="Quit"
            aboveID=""
            leftID="Options"
            rightID="Play"
            belowID=""
            defaultSelected="false"
            halign="right"
            valign="bottom"
            horizontal="10"
            vertical="10"
            width="25%"
            height="10%"
            released-image="texture_ui_button_released"
            released-thickness="4,4,4,4"
            hover-image="texture_ui_button_hover"
            hover-thickness="4,4,4,4"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="4,4,4,4"
            onclick="queue:UI.QuitGameButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="125"
                height="125"
                content="Quit Game"
                font="font_hyperspace"
                />
      </Button>
    </Widgets>
</UI>
