<UI>
  <Widgets>
    <!-- Beginning of left-hand side panel -->
    <Panel
      halign="center"
      valign="center"
      horizontal="-25%"
      vertical="0"
      width="40%"
      height="75%"
      id="options_menu_left_panel">
      <Button
        id="Display"
        aboveID="GameSettings"
        belowID="Controls"
        defaultSelected="true"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="5%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        onclick="queue:Settings.DisplaySettingsButtonPressedEvent">
        <Label
            halign="center"
            valign="center"
            horizontal="0"
            vertical="0"
            width="90%"
            height="90%"
            content="Display"
            font="font_game_over"
            />
      </Button>
      <Button
        id="Controls"
        aboveID="Display"
        belowID="GameSettings"
        defaultSelected="false"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="30%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        onclick="queue:Settings.ControlsSettingsButtonPressedEvent">
        <Label
            halign="center"
            valign="center"
            horizontal="0"
            vertical="0"
            width="90%"
            height="90%"
            content="Controls"
            font="font_game_over"
            />
      </Button>
      <Button
        id="GameSettings"
        aboveID="Controls"
        belowID="Display"
        defaultSelected="false"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="55%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        onclick="queue:Settings.GameSettingsButtonPressedEvent">
        <Label
            halign="center"
            valign="center"
            horizontal="0"
            vertical="0"
            width="90%"
            height="90%"
            content="Game Settings"
            font="font_game_over"
            />
      </Button>
    </Panel>
    <!-- End of left-hand side panel -->
    
    <!-- Beginning of Display right-hand side panel -->
    <Panel
        halign="center"
        valign="center"
        horizontal="25%"
        vertical="0"
        width="40%"
        height="75%"
        id="display_options_menu_right_panel"
        hidden="true">
        <!-- Beginning of Full/Windowed/Borderless options sub menu (Full, Window, Borderless) -->
      <DropDownPanel
        id="Screen_Size_Settings_Dropdown"
        halign="center"
        valign="top"
        vertical="5%"
        width="80%"
        height="35%"
        aspect-ratio="20:4"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        close-on="Settings.FullScreenSettingsButtonPressedEvent,Settings.WindowedSettingsButtonPressed,Settings.BorderlessWindowButtonPressedEvent"
        belowID="FXAA_Settings_Dropdown"
        class="DropDown"
        >
        <Label
          id="Screen_Size_Settings_Dropdown_Label"
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="75%"
          height="75%"
          content="Screen Size: Full Screen"
          font="font_game_over"
        />
        <Contents
          width="100%"
          height="300%"
          >
        <Button
          id="FullScreen"
          aboveID="BorderlessWindow"
          belowID="Windowed"
          defaultSelected="false"
          halign="center"
          valign="top"
          horizontal="0"
          vertical="0"
          width="100%"
          height="33.33333%"
          released-image="texture_ui_button_released"
          released-thickness="5,5,5,5"
          hover-image="texture_ui_button_hover"
          hover-thickness="5,5,5,5"
          pressed-image="texture_ui_button_pressed"
          pressed-thickness="5,5,5,5"
          on-click="queue:Settings.FullScreenSettingsButtonPressedEvent">
          <Label
              halign="center"
              valign="center"
              horizontal="0"
              vertical="0"
              width="100%"
              height="100%"
              content="Full Screen"
              font="font_game_over"
              />
        </Button>
        <Button
          id="Windowed"
          aboveID="FullScreen"
          belowID="BorderlessWindow"
          defaultSelected="false"
          halign="center"
          valign="top"
          horizontal="0"
          vertical="33.33333%"
          width="100%"
          height="33.33333%"
          released-image="texture_ui_button_released"
          released-thickness="5,5,5,5"
          hover-image="texture_ui_button_hover"
          hover-thickness="5,5,5,5"
          pressed-image="texture_ui_button_pressed"
          pressed-thickness="5,5,5,5"
          on-click="queue:Settings.WindowedSettingsButtonPressedEvent">
          <!-- hidden="true" -->
          <Label
              halign="center"
              valign="center"
              horizontal="0"
              vertical="0"
              width="100%"
              height="100%"
              content="Windowed"
              font="font_game_over"
                />
        </Button>
        <Button
          id="BorderlessWindow"
          aboveID="Windowed"
          belowID="FullScreen"
          defaultSelected="false"
          halign="right"
          valign="top"
          horizontal="0"
          vertical="66.66666%"
          width="100%"
          height="33.33333%"
          released-image="texture_ui_button_released"
          released-thickness="5,5,5,5"
          hover-image="texture_ui_button_hover"
          hover-thickness="5,5,5,5"
          pressed-image="texture_ui_button_pressed"
          pressed-thickness="5,5,5,5"
          on-click="queue:Settings.BorderlessWindowButtonPressedEvent">
          <!-- hidden="true" -->
          <Label
              halign="center"
              valign="center"
              horizontal="0"
              vertical="0"
              width="100%"
              height="100%"
              content="Borderless Window"
              font="font_game_over"
                />
         </Button>
       </Contents>
     </DropDownPanel>
     <!-- End of Full/Windowed/Borderless options sub menu -->
     <!-- Beginning of Anti-Aliasing options sub menu (Off, FXAA, Feathering) -->
      <DropDownPanel
        id="FXAA_Settings_Dropdown"
        halign="center"
        valign="top"
        vertical="40%"
        width="80%"
        height="35%"
        aspect-ratio="20:4"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        close-on="Settings.AAFXAASettingsButtonPressedEvent,Settings.AAFeatheringButtonPressedEvent,Settings.AAOffButtonPressedEvent"
        aboveID="Screen_Size_Settings_Dropdown"
        class="DropDown"
        >
        <Label
          id="FXAA_Settings_Dropdown_Label"
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="75%"
          height="75%"
          content="Anti-Alias: FXAA"
          font="font_game_over"
        />
        <Contents
          width="100%"
          height="300%">
          <Button
            id="FXAA"
            aboveID="Off"
            belowID="Feathering"
            defaultSelected="false"
            halign="center"
            valign="top"
            horizontal="0"
            vertical="0"
            width="100%"
            height="33.33333%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            on-click="queue:Settings.AAFXAASettingsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="FXAA"
                font="font_game_over"
                />
          </Button>
          <Button
            id="Feathering"
            aboveID="FXAA"
            belowID="Off"
            defaultSelected="false"
            halign="center"
            valign="top"
            horizontal="0"
            vertical="33.33333%"
            width="100%"
            height="33.33333%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            on-click="queue:Settings.AAFeatheringButtonPressedEvent">
            <!-- hidden="true" -->
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="Feathering"
                font="font_game_over"
                  />
          </Button>
          <Button
            id="Off"
            aboveID="Feathering"
            belowID="FXAA"
            defaultSelected="false"
            halign="center"
            valign="top"
            horizontal="0"
            vertical="66.66666%"
            width="100%"
            height="33.33333%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            on-click="queue:Settings.AAOffButtonPressedEvent">
            <!--hidden="true"-->
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="Off"
                font="font_game_over"
                  />
          </Button>
        </Contents>
      </DropDownPanel>
        <!-- End of Anti-Aliasing options sub menu (Off, FXAA, Feathering) -->
    </Panel>
    <!-- End of Display right-hand side panel -->
     
    <!-- Beginning of Controls Right Side Panel -->
    <Panel
        halign="center"
        valign="center"
        horizontal="25%"
        vertical="0"
        width="40%"
        height="75%"
        id="controls_options_menu_right_panel"
        hidden="true">
        <!-- Rotate Left Button -->
        <Button
          id="Rotate_Left"
          belowID="Rotate_Right"
          defaultSelected="false"
          halign="center"
          valign="top"
          horizontal="0"
          vertical="5%"
          width="80%"
          height="25%"
          released-image="texture_ui_button_released"
          released-thickness="5,5,5,5"
          hover-image="texture_ui_button_hover"
          hover-thickness="5,5,5,5"
          pressed-image="texture_ui_button_pressed"
          pressed-thickness="5,5,5,5"
          onclick="queue:Settings.RotateLeftSettingsButtonPressedEvent">
          <Label
              halign="left"
              valign="center"
              horizontal="0"
              vertical="0"
              width="75%"
              height="75%"
              content="Rotate Left:"
              font="font_game_over"
              />
          <!-- Place Image In button to allow for display of currently bound button -->
        </Button>
      <Button
        id="Rotate_Right"
        aboveID="Rotate_Left"
        defaultSelected="false"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="35%"
        width="80%"
        height="25%"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        onclick="queue:Settings.RotateRightSettingsButtonPressedEvent">
        <!--hidden="true"-->
        <Label
            halign="left"
            valign="center"
            horizontal="0"
            vertical="0"
            width="75%"
            height="75%"
            content="Rotate Right:"
            font="font_game_over"
              />
        <!-- Place Image In button to allow for display of currently bound button -->
      </Button>
        <!-- Future Buttons can add other controls as necessary starting here -->
    </Panel>
    <!-- End of Controls Right Side Panel -->
    
    <!-- Beginning of Game Settings Right Side Panel -->
    <Panel
        halign="center"
        valign="center"
        horizontal="25%"
        vertical="0"
        width="40%"
        height="75%"
        id="game_options_menu_right_panel"
        hidden="true">
      <DropDownPanel
        id="Speed_Dropdown"
        halign="center"
        valign="top"
        vertical="5%"
        width="80%"
        height="20%"
        aspect-ratio="20:4"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        close-on="Settings.SpeedSettingsButtonPressedEvent"
        aboveID="Volume_Slider"
        belowID="Difficulty_Dropdown"
        class="DropDown"
        >
        <Label
          id="Speed_Dropdown_Label"
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="75%"
          height="75%"
          content="Speed: 1.0x"
          font="font_game_over"
          />
        <Contents
          width="100%"
          height="400%">
          <Image
            halign="center"
            valign="center"
            horizontal="0"
            vertical="0"
            width="100%"
            height="100%"
            image="texture_ui_dropdown_background"
            />
          <Button
              id="0.5x"
              aboveID="2.0x"
              belowID="1.0x"
              defaultSelected="false"
              halign="center"
              valign="top"
              horizontal="0"
              vertical="0"
              width="100%"
              height="25%"
              released-image="texture_ui_button_released"
              released-thickness="5,5,5,5"
              hover-image="texture_ui_button_hover"
              hover-thickness="5,5,5,5"
              pressed-image="texture_ui_button_pressed"
              pressed-thickness="5,5,5,5"
              onclick="queue:Settings.SpeedSettingsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="0.5x"
                font="font_game_over"
                  />
          </Button>
          <Button
              id="1.0x"
              aboveID="0.5x"
              belowID="1.5x"
              defaultSelected="false"
              halign="center"
              valign="top"
              horizontal="0"
              vertical="25%"
              width="100%"
              height="25%"
              released-image="texture_ui_button_released"
              released-thickness="5,5,5,5"
              hover-image="texture_ui_button_hover"
              hover-thickness="5,5,5,5"
              pressed-image="texture_ui_button_pressed"
              pressed-thickness="5,5,5,5"
              onclick="queue:Settings.SpeedSettingsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="1.0x"
                font="font_game_over"
                  />
          </Button>
          <Button
              id="1.5x"
              aboveID="1.0x"
              belowID="2.0x"
              defaultSelected="false"
              halign="center"
              valign="top"
              horizontal="0"
              vertical="50%"
              width="100%"
              height="25%"
              released-image="texture_ui_button_released"
              released-thickness="5,5,5,5"
              hover-image="texture_ui_button_hover"
              hover-thickness="5,5,5,5"
              pressed-image="texture_ui_button_pressed"
              pressed-thickness="5,5,5,5"
              onclick="queue:Settings.SpeedSettingsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="1.5x"
                font="font_game_over"
                  />
          </Button>
          <Button
              id="2.0x"
              aboveID="1.5x"
              belowID="0.5x"
              defaultSelected="false"
              halign="center"
              valign="top"
              horizontal="0"
              vertical="75%"
              width="100%"
              height="25%"
              released-image="texture_ui_button_released"
              released-thickness="5,5,5,5"
              hover-image="texture_ui_button_hover"
              hover-thickness="5,5,5,5"
              pressed-image="texture_ui_button_pressed"
              pressed-thickness="5,5,5,5"
              onclick="queue:Settings.SpeedSettingsButtonPressedEvent">
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="2.0x"
                font="font_game_over"
                  />
          </Button>
        </Contents>
      </DropDownPanel>
      <DropDownPanel
        id="Difficulty_Dropdown"
        halign="center"
        valign="top"
        vertical="30%"
        width="80%"
        height="20%"
        aspect-ratio="20:4"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5"
        close-on="Settings.DifficultySettingsButtonPressedEvent"
        aboveID="Speed_Dropdown"
        belowID="Volume_Slider"
        class="DropDown"
        >
        <Label
          id="Difficulty_Dropdown_Label"
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="100%"
          height="100%"
          content="Difficulty: Normal"
          font="font_game_over"
          />
        <Contents
          width="100%"
          height="300%">
          <Image
            halign="center"
            valign="center"
            horizontal="0"
            vertical="0"
            width="100%"
            height="100%"
            image="texture_ui_dropdown_background"
            />
          <Button
            id="Easy"
            aboveID="Hard"
            belowID="Normal"
            defaultSelected="false"
            halign="center"
            valign="top"
            horizontal="0"
            vertical="0"
            width="100%"
            height="33.33333%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            onclick="queue:Settings.DifficultySettingsButtonPressedEvent">
            <!-- hidden="true" -->
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="Easy"
                font="font_game_over"
                    />
          </Button>
          <Button
            id="Normal"
            aboveID="Easy"
            belowID="Hard"
            defaultSelected="false"
            halign="center"
            valign="top"
            horizontal="0"
            vertical="33.33333%"
            width="100%"
            height="33.33333%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            onclick="queue:Settings.DifficultySettingsButtonPressedEvent">>
            <!-- hidden="true" -->
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="Normal"
                font="font_game_over"
                    />
          </Button>
          <Button
            id="Hard"
            aboveID="Normal"
            belowID="Easy"
            defaultSelected="false"
            halign="center"
            valign="top"
            horizontal="0"
            vertical="66.66666%"
            width="100%"
            height="33.33333%"
            released-image="texture_ui_button_released"
            released-thickness="5,5,5,5"
            hover-image="texture_ui_button_hover"
            hover-thickness="5,5,5,5"
            pressed-image="texture_ui_button_pressed"
            pressed-thickness="5,5,5,5"
            onclick="queue:Settings.DifficultySettingsButtonPressedEvent">
            <!-- hidden="true" -->
            <Label
                halign="center"
                valign="center"
                horizontal="0"
                vertical="0"
                width="100%"
                height="100%"
                content="Hard"
                font="font_game_over"
                    />
          </Button>
        </Contents>
      </DropDownPanel>
      <Slider
        id="Volume_Slider"
        aboveID="Difficulty_Dropdown"
        belowID="Speed_Dropdown"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="55%"
        width="100%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="5,5,5,5"
        hover-image="texture_ui_button_hover"
        hover-thickness="5,5,5,5"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="5,5,5,5">
      </Slider>
    </Panel>
    <!-- End of Game Settings Right Side Panel -->
  </Widgets>
</UI>