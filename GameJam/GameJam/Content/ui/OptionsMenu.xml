<UI>
  <Widgets>
    <Panel
      halign="center"
      valign="center"
      horizontal="-25%"
      vertical="0"
      width="40%"
      height="75%"
      id="options_menu_panel">
      <Button
        id="Display"
        aboveID="Speed"
        leftID=""
        rightID=""
        belowID="Controls"
        defaultSelected="true"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="-5%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="4,4,4,4"
        hover-image="texture_ui_button_hover"
        hover-thickness="4,4,4,4"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="4,4,4,4"
        onclick="queue:UI.DisplaySettingsButtonPressedEvent">
        <Label
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="90%"
          height="90%"
          content="Display"
          font="font_game_over"
              />
      </Button>
      <Button
        id="Controls"
        aboveID="Display"
        leftID=""
        rightID=""
        belowID="Difficulty"
        defaultSelected="false"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="-30%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="4,4,4,4"
        hover-image="texture_ui_button_hover"
        hover-thickness="4,4,4,4"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="4,4,4,4"
        onclick="queue:UI.ControlsSettingsButtonPressedEvent">
        <Label
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="90%"
          height="90%"
          content="Display"
          font="font_game_over"
              />
      </Button>
      <Button
        id="Difficulty"
        aboveID="Controls"
        leftID=""
        rightID=""
        belowID="Speed"
        defaultSelected="false"
        halign="center"
        valign="bottom"
        horizontal="0"
        vertical="30%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="4,4,4,4"
        hover-image="texture_ui_button_hover"
        hover-thickness="4,4,4,4"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="4,4,4,4"
        onclick="queue:UI.DifficultySettingsButtonPressedEvent">
        <Label
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="90%"
          height="90%"
          content="Difficulty"
          font="font_game_over"
              />
      </Button>
      <Button
        id="Speed"
        aboveID="Difficulty"
        leftID=""
        rightID=""
        belowID="Display"
        defaultSelected="false"
        halign="center"
        valign="bottom"
        horizontal="0"
        vertical="5%"
        width="80%"
        height="20%"
        released-image="texture_ui_button_released"
        released-thickness="4,4,4,4"
        hover-image="texture_ui_button_hover"
        hover-thickness="4,4,4,4"
        pressed-image="texture_ui_button_pressed"
        pressed-thickness="4,4,4,4"
        onclick="queue:UI.SpeedSettingsButtonPressedEvent">
        <Label
          halign="center"
          valign="center"
          horizontal="0"
          vertical="0"
          width="90%"
          height="90%"
          content="Speed"
          font="font_game_over"
              />
      </Button>
    </Panel>
  </Widgets>
</UI>